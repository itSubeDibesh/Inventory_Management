{{>layout/bodyHead}}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>{{Action}} Warehouse And Marts</h5>
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="fa fa fa-wrench open-card-option"></i></li>
                    <li><i class="fa fa-window-maximize full-card"></i></li>
                    <li><i class="fa fa-minus minimize-card"></i></li>
                </ul>
            </div>
        </div>
        <div class="card-block">
            <h4 class="sub-title">Please Fill The Form WiselyðŸ˜€ðŸ˜€!!</h4>
            <form action="/warehouse_and_marts/{{Action}}/warehouseMart" method="post">
                {{#editWORM.id}}<input type="hidden" id="id" name="id" value="{{editWORM.id}}">{{/editWORM.id}}
                <!--  Set Form Fields  -->

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Warehouse / Mart Name</label>
                    <div class="col-sm-10">
                        <input type="text" required name="name" id="name"
                               value="{{#editWORM.name}}{{editWORM.name}}{{/editWORM.name}}"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Contact</label>
                    <div class="col-sm-10">
                        <input type="tel" required name="contact" id="contact"
                               value="{{#editWORM.contact}}{{editWORM.contact}}{{/editWORM.contact}}"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Type</label>
                    <div class="col-sm-10">
                        <select name="type" id="type" class="form-control" required>
                            <option disabled selected>Select Type</option>
                        </select>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input type="text" required name="address" id="address"
                               value="{{#editWORM.address}}{{editWORM.address}}{{/editWORM.address}}"
                               class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea rows="5" cols="5" class="form-control" name="description" id="description" placeholder="Description">{{#editWORM.description}}{{editWORM.description}}{{/editWORM.description}}</textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-success m-2" type="submit"><i class="fas fa-edit"></i> {{Action}}
                        </button>
                        <button class="btn btn-danger m-2" type="reset"><i class="fas fa-trash"></i> Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{>layout/bodyFooter}}
<script type="text/javascript" src="/js/common-pages.js"></script>
<script>
    const selectionType=["Warehouse","Mart"],
            typeId= document.getElementById("type"),
            typeSelectedValue={{#editWORM.type}}"{{editWORM.type}}"{{/editWORM.type}}{{^editWORM.type}}null{{/editWORM.type}};
    selectionType.forEach(item=>{
        typeId.innerHTML+=`<option value="${item}" ${item==typeSelectedValue?"selected":""}>${item}</option>`;
    });
</script>